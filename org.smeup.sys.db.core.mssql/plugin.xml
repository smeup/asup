<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension
         point="org.eclipse.net4j.db.dbAdapters">
      <dbAdapter
            class="org.smeup.sys.db.core.mssql.MsSQLDatabaseAdapter"
            name="mssql"
            version="3.0.0">
      </dbAdapter>
   </extension>
   <extension
         point="org.eclipse.datatools.connectivity.driverExtension">
      <driverTemplate
            createDefault="false"
            emptyJarListIsOK="false"
            id="org.eclipse.datatools.enablement.msft.sqlserver.2008.asup.driverTemplate"
            jarList="lib/sqljdbc4.jar"
            name="SQL Server Driver for As.UP"
            parentCategory="org.eclipse.datatools.enablement.msft.sqlserver.2008.driverCategory"
            valuesProvider="org.eclipse.datatools.enablement.msft.internal.sqlserver.driver.SQLServer2008DriverValuesProvider">
         <properties>
            <property
                  generated="false"
                  id="org.eclipse.datatools.connectivity.db.driverClass"
                  name="%driverClass"
                  required="true"
                  value="com.microsoft.sqlserver.jdbc.SQLServerDriver"
                  visible="true">
            </property>
            <property
                  generated="false"
                  id="org.eclipse.datatools.connectivity.db.vendor"
                  name="%driverVendor"
                  required="true"
                  value="SQL Server"
                  visible="false">
            </property>
            <property
                  generated="false"
                  id="org.eclipse.datatools.connectivity.db.version"
                  name="%driverVersion"
                  required="true"
                  value="2008"
                  visible="false">
            </property>
            <property
                  generated="false"
                  id="org.eclipse.datatools.connectivity.db.databaseName"
                  name="%driverDBName"
                  required="true"
                  value="pubs"
                  visible="true">
            </property>
            <property
                  generated="false"
                  id="org.eclipse.datatools.connectivity.db.URL"
                  name="%driverConnectionURL"
                  required="true"
                  value="jdbc:sqlserver://localhost:1433;databaseName=pubs"
                  visible="true">
            </property>
            <property
                  generated="false"
                  id="org.eclipse.datatools.connectivity.db.username"
                  name="%driverUID"
                  required="false"
                  visible="true">
            </property>
            <property
                  generated="false"
                  id="org.eclipse.datatools.connectivity.db.password"
                  name="%driverPWD"
                  required="false"
                  visible="true">
            </property>
         </properties>
      </driverTemplate>
   </extension>
</plugin>
